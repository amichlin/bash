#!/bin/bash

# Update package lists
sudo apt-get update -y

# Check if Google Chrome is installed, and update it if necessary
if dpkg -l | grep -q "google-chrome-stable"; then
    sudo apt-get install --only-upgrade -y google-chrome-stable
fi

# Check if Thunderbird is installed, and update it if necessary
if dpkg -l | grep -q "thunderbird"; then
    sudo apt-get install --only-upgrade -y thunderbird
fi

echo "Google Chrome and Thunderbird updates completed if installed."
